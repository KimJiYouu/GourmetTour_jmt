DROP TABLE COMMENTS;
DROP TABLE FOODBOARD;
DROP TABLE RVBOARD;
DROP TABLE MEMBERS;

CREATE TABLE MEMBERS (
    ID VARCHAR2(30),
    PW VARCHAR2(30) NOT NULL,
    NAME VARCHAR2(30) NOT NULL,
    EMAIL VARCHAR2(30),
    GENDER CHAR(1),
    FOOD VARCHAR2(30),
    REGDATE DATE DEFAULT SYSDATE
);
ALTER TABLE MEMBERS ADD CONSTRAINT MEMBERS_PK PRIMARY KEY (ID);

DROP SEQUENCE BNO_SEQ;
CREATE SEQUENCE BNO_SEQ NOCACHE;

CREATE TABLE RVBOARD (
    BNO NUMBER(5) CONSTRAINT RVBOARD_PK PRIMARY KEY,
    ID VARCHAR2(30),
    TITLE VARCHAR2(1000),
    WRITING VARCHAR2(4000),
    HIT NUMBER(5) DEFAULT 0,
    REGDATE DATE DEFAULT SYSDATE
);

CREATE TABLE COMMENTS (
    CNO NUMBER(5) CONSTRAINT COMMENTS_PK PRIMARY KEY,
    ID VARCHAR2(30),
    COMMENT_TEXT VARCHAR2(3000) NULL,
    REGDATE DATE DEFAULT SYSDATE,
    BNO NUMBER(5)
);
DROP SEQUENCE CNO_SEQ;
CREATE SEQUENCE CNO_SEQ NOCACHE;

CREATE TABLE FOODBOARD (
    FNO NUMBER(5) CONSTRAINT PK_KBOARD PRIMARY KEY,
    ID VARCHAR2(30),
    FOOD VARCHAR2(20) NULL,
    TITLE VARCHAR2(1000) NULL,
    WRITING VARCHAR2(4000) NULL,
    REGION VARCHAR2(10),
    REGDATE DATE DEFAULT SYSDATE,
    ADDRESS VARCHAR2(1000) NULL,
    OPEN VARCHAR2(100) NULL, 
    HIT NUMBER(5) DEFAULT (0)
);
DROP SEQUENCE FNO_SEQ;
CREATE SEQUENCE FNO_SEQ NOCACHE;
